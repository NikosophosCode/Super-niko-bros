{
  "version": 2,
  "outputDirectory": "dist",
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "installCommand": "npm ci --include=dev",
  "buildCommand": "npm run build",
  "framework": "vite",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
